
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>修改菜单</title>
</head>
<body>
    <div style="padding: 15px; overflow: hidden">
        <form id="MenuEditForm" method="post" action="">
            <table class="tableForm" width="100%">
                <tr>
                    <th>
                        菜单名称：
                    </th>
                    <td>
                        <input type="hidden" id="hid" name="Id"/>
                        <input type="text" name="Name" id="txtName" class="easyui-validatebox textbox"
                               data-options="required:true,validType:'length[2,20]'" style="width:220px;height:22px;" />
                    </td>
                </tr>
                <tr>
                    <th>
                        父节点：
                    </th>
                    <td>
                        <select id="comboxParentIdTree" class="easyui-combotree" data-options="url:'/Menu/GetMenuTree',lines:true,editable:false,valueField:'id',textField:'text',multiple:false" style="width:220px;height:22px;"></select>
                        <img style="cursor: pointer; vertical-align: middle;" onclick="$('#comboxIconTree').combotree('clear');"
                             alt="清空图标" title="清空图标" src="../Content/themes/icon/edit-clear.png" />
                    </td>
                </tr>
                <tr>
                    <th>
                        标识码：
                    </th>
                    <td>
                        <input type="text" name="Code" id="txtCode" class="easyui-validatebox textbox"
                               data-options="required:false,validType:'length[2,40]'" style="width:220px;height:22px;" />
                    </td>
                </tr>
                <tr>
                    <th>
                        链接地址：
                    </th>
                    <td>
                        <input type="text" name="LinkAddress" id="txtLinkAddress" class="easyui-validatebox textbox"
                               data-options="required:false,validType:'length[2,40]'" style="width:220px;height:22px;" />
                    </td>
                </tr>
                <tr>
                    <th>
                        图标：
                    </th>
                    <td>
                        <select id="comboxIconTree" class="easyui-combotree" data-options="url:'/Button/GetIconsList',editable:false,valueField:'id',textField:'text',multiple:false" style="width:220px;height:22px;"></select>
                        <img style="cursor: pointer; vertical-align: middle;" onclick="$('#comboxIconTree').combotree('clear');"
                             alt="清空图标" title="清空图标" src="../Content/themes/icon/edit-clear.png" />
                    </td>
                </tr>
                <tr>
                    <th>
                        排序：
                    </th>
                    <td>
                        <input type="number" name="Sort" id="txtSort" value="1" class="easyui-numberspinner"
                               data-options="min:1,max:100,editable:false" autocomplete="off" style="width:70px;height:22px;" />
                    </td>
                </tr>

            </table>
        </form>
    </div>
</body>
</html>
