@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>UserRole</title>
</head>
<body>
    <div style="padding: 15px; overflow: hidden">
        <form id="SetRoleForm" method="post" action="">
            <table class="tableForm" width="100%">
                <tr>
                    <th>
                        用户：
                    </th>
                    <td>
                        <input type="hidden" id="hiduserid" name="UserIds" />
                        <input type="text" id="txtusernameR" name="txtusernameR" class="easyui-validatebox textbox" disabled="disabled" style="width:170px;height:22px;" />
                    </td>
                </tr>
                <tr>
                    <th>
                        用户角色：
                    </th>
                    <td>
                        <input class="easyui-combobox" id="comboxrole" name="comboxrole" style="width:170px;height:22px;" data-options="url:'/User/GetRoleInfo',editable:false,valueField:'Id',textField:'Name',multiple:true" />
                        <img style="cursor: pointer; vertical-align: middle;" onclick="$('#comboxrole').combobox('clear');"
                             alt="清空角色" title="清空角色" src="../Content/themes/icon/edit-clear.png" />
                    </td>
                </tr>
            </table>
        </form>
    </div>

</body>
</html>
